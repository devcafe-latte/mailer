{
  "name": "covle-mailer",
  "version": "2.0.2",
  "description": "Microservice for handling email sending",
  "main": "app.js",
  "scripts": {
    "dev": "ts-node ./src/app.ts",
    "cron": "tsc && node ./build/cron.js",
    "start": "nodemon",
    "test": "jasmine-ts --config=jasmine.json",
    "testJunit": "ts-node ./node_modules/jasmine-xml-reporter/bin/jasmine.js --junitreport --config=jasmine.json --output=\"./junit\"",
    "testNoThirdParties": "ts-node ./node_modules/jasmine-xml-reporter/bin/jasmine.js --junitreport --random=false --config=jasmine-no-third-parties.json --output=\"./junit\"",
    "testWithCoverage": "nyc -r lcov -e .ts -x \"*.spec.ts\" jasmine-ts --config=jasmine.json"
  },
  "author": "Co van Leeuwen <coo@covle.com>",
  "license": "ISC",
  "dependencies": {
    "@types/addressparser": "^1.0.0",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/lodash": "^4.14.165",
    "@types/mysql": "^2.15.6",
    "@types/nodemailer": "^6.2.2",
    "@types/nodemailer-mailgun-transport": "^1.4.1",
    "@types/seedrandom": "^2.4.28",
    "@types/uuid": "^3.4.5",
    "addressparser": "^1.0.1",
    "body-parser": "^1.19.0",
    "cereal-bowl": "^1.0.2",
    "db-migrate": "^0.11.11",
    "db-migrate-mysql": "^2.1.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "hasha": "^5.1.0",
    "lodash": "^4.17.20",
    "moment": "^2.24.0",
    "mysql": "^2.17.1",
    "nodemailer": "^6.4.0",
    "nodemailer-mailgun-transport": "^2.0.0",
    "nodemailer-sendinblue-transport": "^1.2.3",
    "promise-mysql": "^4.1.0",
    "seedrandom": "^2.4.4",
    "typescript": "^3.5.3",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/jasmine": "^3.4.0",
    "@types/supertest": "^2.0.8",
    "jasmine": "^3.4.0",
    "jasmine-core": "^3.4.0",
    "jasmine-reporters": "^2.3.2",
    "jasmine-ts": "^0.3.0",
    "jasmine-xml-reporter": "^1.2.1",
    "nodemon": "^2.0.6",
    "nyc": "^14.1.1",
    "supertest": "^4.0.2",
    "ts-node": "^8.3.0"
  }
}
